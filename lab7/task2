using System;

namespace task2
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Введите значение угла в радианах");
            double a = Convert.ToDouble(Console.ReadLine());
            double a1 = a * 180 / Math.PI;
            Console.WriteLine($"{a} рад = {a1}°");
        }
    }
}
