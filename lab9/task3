using System;

namespace task2
{
    class Program
    {
        static void Main(string[] args)
        {
            int K, N;
            {
                Console.Write("Введите день года К = ");
                K = Convert.ToInt32(Console.ReadLine());

                Console.Write("Введите N = ");
                N = Convert.ToInt32(Console.ReadLine());
            }

            int remainder;
            {
                remainder = (K + N - 2) % 7 + 1;

                Console.Write($"Номер дня недели - {remainder}");
            }
        }
    }
}
