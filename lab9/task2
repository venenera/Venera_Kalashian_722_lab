using System;

namespace task2
{
    class Program
    {
        static void Main(string[] args)
        {
            int K;
            {
                Console.Write("Введите день года К = ");
                K = Convert.ToInt32(Console.ReadLine());
            }

            int remainder;
            {
                remainder = K % 7;

                Console.Write($"Номер дня недели - {remainder}");
            }
        }
    }
}
