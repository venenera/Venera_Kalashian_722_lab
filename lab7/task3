using System;

namespace task3
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Введите вес конфет в кг");
            double x = Convert.ToDouble(Console.ReadLine());
            Console.WriteLine($"Введите цену за {x} кг конфет");
            double a = Convert.ToDouble(Console.ReadLine());
            Console.WriteLine("Введите Y вес конфет");
            double y = Convert.ToDouble(Console.ReadLine());
            double p = a / x; //цена за 1 кг
            double p1 = p * y;
            Console.WriteLine($"1 кг конфет стоит {p} рублей, {y} кг конфет стоит {p1} рублей");
        }
    }
}
