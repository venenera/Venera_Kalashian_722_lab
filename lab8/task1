using System;

namespace laba8
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Введите размер файла в байтах");
            int I;
            I = Convert.ToInt32(Console.ReadLine());
            I = I / 1024;
            Console.WriteLine($"Файл занимает {I} целых КилоБайтов");
        }
    }
}
